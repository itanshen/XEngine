<input type="button" value="Search" id="btnSearch" />
<div class="panel_body">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>UserName</th>
                <th>Email</th>
                <th>CName</th>
                <th>ModifiedDate</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody id="divUsers"></tbody>
    </table>
</div>

<textarea id="template_list" class="hidden">
    {#foreach $T.list as record}
    <tr>
        <td>{$T.record.UserName}</td>
        <td>{$T.record.Email}</td>
        <td>{$T.record.CName}</td>
        <td>{$T.record.ModifiedDate}</td>
        <td>{$T.record.Id}</td>
    </tr>
    {#/for}
</textarea>

<h3>WebApi跨域</h3>
<div id="divTest"></div>

<script>
    $(function () {
        $("#btnSearch").click(function () {
            var dto = {
                userName: "a",
                x: Math.random()
            };
            $.ajax({
                type: "POST",
                contentType: "application/json; charset=utf-8",
                url: "/Home/AjaxTest",
                data: JSON.stringify(dto),
                dataType: "json",
                //beforeSend: function () {
                //    idx = layer.load();
                //},
                success: function (data) {
                    var json = data;
                    if (json.err == "null") {
                        $("#divUsers").setTemplateElement("template_list", null, { filter_data: false });
                        $("#divUsers").processTemplate(json);
                    }

                },
                //complete: function () {
                //    layer.close(idx);
                //},
                error: function () {
                    alert("error");
                }
            });
        });
        jQuery.support.cors = true;
        var ApiUrl = "http://localhost:49115/";
        $.ajax({
            type: "get",
            url: ApiUrl + "api/Charging/GetAllChargingData",
            data: {},
            dataType: "json",
            success: function (data, status) {
                if (status == "success") {
                    $("#divTest").html(data);
                }
            },
            error: function (e) {
                $("#divTest").html("Error");
            },
            complete: function () {

            }

        });
    });
</script>